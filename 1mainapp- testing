import java.util.*;

public class MainApp {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        char key;
        Food foodMenu = new Food(); 
        Beverages beverageMenu = new Beverages();
        Order order = new Order(foodMenu, beverageMenu);

        double total =0.0;
        double tprice = 0.0;
        double amt = 0;
        int cardNum =0;
        Cash cash = new Cash(tprice,total,amt);
        Card card = new Card(tprice,total,cardNum);
        Payment payment = new Payment(tprice,total);        

        final int MAX_attempts = 3;

        System.out.println("  ============================================");
        System.out.println("  |  ☠️️  WELCOME TO CAFE KAPAL LAUD  ☕     |");
        System.out.println("  ============================================");
        System.out.println("  ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~");
        System.out.print("💀 Press any key [Q] to continue: ");

        key = input.next().charAt(0);
        input.nextLine();
        System.out.println("");

        int opt = -1;
        do {
            try {
                System.out.println("+====================+");
                System.out.println("|     MAIN MENU      |");
                System.out.println("+====================+");
                System.out.println("| 1. Admin           |");
                System.out.println("| 2. Customer        |");
                System.out.println("| 0. Exit            |");
                System.out.println("+====================+");
                System.out.print("Choose option [1/2/0]: ");

                opt = input.nextInt();
                input.nextLine();
                System.out.println("");

                if (opt == 1) {
                    // Admin Section
                    int loginAttempts = 0;
                    do {
                        try {
                            System.out.print("Enter Admin ID: ");
                            int userID = input.nextInt();
                            input.nextLine();
                            System.out.print("Enter Admin Password: ");
                            String password = input.nextLine();

                            Admin admin = new Admin(userID, password, "Jamal", foodMenu, beverageMenu);

                            if (admin.adminLogin()) {
                                System.out.println("\nWelcome Admin, " + admin.getAdminName() + " :)");
                                String choice;
                                do {
                                    System.out.println("+==============================+");
                                    System.out.println("|   [1] View Sales             |");
                                    System.out.println("|------------------------------|");
                                    System.out.println("|   [2] View Items Sold        |");
                                    System.out.println("|------------------------------|");
                                    System.out.println("|   [3] Update Menu            |");
                                    System.out.println("|------------------------------|");
                                    System.out.println("|   [4] Display Customer       |");
                                    System.out.println("|------------------------------|");
                                    System.out.println("|   [M] Main Menu              |");
                                    System.out.println("+==============================+");
                                    System.out.print("Choose option [1/2/3/4/M]: ");

                                    choice = input.nextLine();
                                    System.out.println("");

                                    switch (choice) {
                                        case "1":
                                            admin.disSales(payment);
                                            break;
                                        case "2":
                                            admin.disItemSold(order);
                                            break;
                                        case "3":
                                            admin.updateMenu();
                                            break;
                                        case "4":
                                            admin.disTotalCustomer();
                                            break;
                                        case "M"://works as equalsIgnoreCase
                                        case "m"://used switch case for a cleaner code
                                            break;
                                        default:
                                            System.out.println("Invalid option. Please try again.");
                                            break;
                                    }
                                } while (!choice.equalsIgnoreCase("M"));
                                break;
                            } else {
                                loginAttempts++;
                                System.out.println("Error! Invalid Admin ID or password");
                                System.out.println("Remaining attempts: " + (3 - loginAttempts));
                            }
                        } catch (InputMismatchException e) {
                            System.out.println("Invalid input! Please enter correct data.");
                            input.nextLine();
                        } if (loginAttempts >= MAX_attempts){
                            System.out.println("Maximum attempts has been reached!!! Access has been denied");
                            break;
                        }
                    } while (true);
                }

                else if (opt == 2) {
                    // Customer Section 😊 
                    String choice;
                    do {
                        System.out.println("+=================+");
                        System.out.println("|   [1] Sign Up   |");
                        System.out.println("|-----------------|");
                        System.out.println("|   [2] Login     |");
                        System.out.println("|-----------------|");
                        System.out.println("|   [B] Back      |");
                        System.out.println("+=================+");
                        System.out.print("Choose option [1/2/B]: ");

                        choice = input.nextLine();
                        System.out.println("");

                        if (choice.equals("1")) {

                            try {
                                System.out.print("Enter user ID (3 integer): ");
                                int userID = input.nextInt();
                                input.nextLine();

                                System.out.print("Enter password: ");
                                String password = input.nextLine();

                                System.out.print("Enter your name: ");
                                String custName = input.nextLine();

                                System.out.print("Do you wanna register as our member?");
                                System.out.print("\nPress 1 if YES | Press 2 if NO: ");
                                int option = input.nextInt();
                                input.nextLine();

                                if(option == 1){
                                    boolean member = true;

                                    Customer membership = new Membership(userID, password, custName, member);
                                    membership.signUp();
                                    System.out.println("");
                                }
                                if(option == 2){
                                    boolean member = false;

                                    Customer membership = new Membership(userID, password, custName, member);
                                    membership.signUp();
                                    System.out.println("");
                                }
                            } catch (InputMismatchException e) {
                                System.out.println("Invalid input! Please try again.");
                                input.nextLine();
                            }
                        }

                        else if (choice.equals("2")) {
                            int loginAttempts = 0;
                            do {
                                try {
                                    System.out.print("Enter user ID (3 integer): ");
                                    int userID = input.nextInt();
                                    input.nextLine();

                                    System.out.print("Enter password: ");
                                    String password = input.nextLine();

                                    boolean isMember = Customer.isMember(userID);
                                    Customer user;

                                    if(isMember){
                                        user = new Membership(userID, password, "", true);
                                    }
                                    else{
                                        user = new Membership(userID, password, "", false);
                                    }
                                    

                                    if (user.login()) {
                                        System.out.println("Login successful!");
                                        System.out.println("Welcome, " + user.getCustName() + "!");
                                        order.clearOrder();
                                        order.placeOrder();

                                        //double totalOrderPrice = order.getTotalPrice();
                                        //payment.setTotalPrice(totalOrderPrice);
                                       break;

                                    }else {
                                    loginAttempts++;
                                    System.out.println("Invalid User ID or password :(");
                                    System.out.println("Remaining attempts: " + (3 - loginAttempts));
                                }
                            } catch (InputMismatchException e) {
                            System.out.println("Invalid input. Please enter numbers only.");
                            input.nextLine();
                        }
                        if (loginAttempts >= MAX_attempts){
                            System.out.println("Maximum attempt has been reached!!! Returning back to Customer Section");
                            break;
                        }
                    } while (true);
                }

                else if (choice.equalsIgnoreCase("B")) {
                    break;
                } else {
                    System.out.println("Invalid option. Enter again.");
                }
            } while (!choice.equalsIgnoreCase("B"));
        }

        else if (opt == 0) {
            System.out.println("+=========================================+");
            System.out.println("|   😊 Thank you for using our system!    |");
            System.out.println("+=========================================+");

            System.exit(0);
        } else {
            System.out.println("Invalid input, try again.");
        }

    } catch (InputMismatchException e) {
        System.out.println("Invalid input! Please enter numbers only.");
        input.nextLine(); // clear invalid input
    }
} while (opt != 0);
}
}
